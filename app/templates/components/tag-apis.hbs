{{#if hasMethods}}
<div class="panel panel-default">
    <div class="panel-heading" role="tab" id="heading{{safeName}}">
        <h4 class="panel-title">
            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse{{safeName}}" aria-expanded="true" aria-controls="collapse{{safeName}}">
            {{name}}
            </a>
        </h4>
            {{description}}
    </div>
    <div id="collapse{{safeName}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading{{safeName}}">
        <div class="panel-body">

            <ul class='method-list'>
                {{#each methods as |method|}}
                    {{method-description method=method}}
                {{/each}}
            </ul>

        </div>
    </div>
</div>
{{/if}}
