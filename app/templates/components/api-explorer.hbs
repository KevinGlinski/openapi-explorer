{{#if isSchemaLoaded}}

<div style='width:100%'>

    <div class='pull-left'>
        {{#api-tree}}{{/api-tree}}
    </div>
    <div id='mainContent' class='pull-left'>
        {{#api-requests}}{{/api-requests}}
    </div>
</div>
{{#api-info}}{{/api-info}}

{{else}}
<label>Loading API definition</label>
<div class="progress">
  <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
    <span class="sr-only">Loading API definition</span>
  </div>
</div>

{{/if}}

{{request-share}}

{{yield}}
